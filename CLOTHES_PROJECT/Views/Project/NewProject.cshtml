@model Project
@{
    SelectList DeptOptions = new SelectList(ViewBag.DEPTS, "DNUMBER", "DName");
}

<form method="post" asp-action="SaveNewProject" asp-controller="Project">
    <div class="form-group">
        <label asp-for="Pname">Project Name</label>
        <input class="form-control" asp-for="Pname" />
        <span asp-validation-for="Pname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Plocation">Project Location</label>
        <input class="form-control" asp-for="Plocation" />
        <span asp-validation-for="Plocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DNUM">Department</label>
        <select class="form-control" asp-for="DNUM" asp-items="DeptOptions"></select>
    </div>
    <br />
    <br />
    <input type="submit" class="btn btn-primary" value="Add" />
</form>