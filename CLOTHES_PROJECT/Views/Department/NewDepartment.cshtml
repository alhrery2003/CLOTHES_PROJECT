@model Department
@{
    SelectList MangsOptions = new SelectList(ViewBag.MANGS, "ID", "Name");
}

<form method="post" asp-action="SaveNewDepartment" asp-controller="Department">
    <div class="form-group">
        <label asp-for="DName">Department Name</label>
        <input class="form-control" asp-for="DName" />
        <span asp-validation-for="DName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DLocation">Department Location</label>
        <input class="form-control" asp-for="DLocation" />
        <span asp-validation-for="DLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MGRSSN">Manager</label>
        <select class="form-control" asp-for="MGRSSN" asp-items="MangsOptions">
            @*<option value="null">No Manager</option>*@
        </select>
    </div>
    <div class="form-group">
        <label asp-for="MGRStartDate">Manager Start Date</label>
        <input class="form-control" asp-for="MGRStartDate" />
        <span asp-validation-for="MGRStartDate" class="text-danger"></span>
    </div>
    <br />
    <br />
    <input type="submit" class="btn btn-primary" value="Add" />
</form>