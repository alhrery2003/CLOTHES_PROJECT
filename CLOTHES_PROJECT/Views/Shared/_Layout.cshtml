<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CLOTHES_PROJECT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CLOTHES_PROJECT.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div style="background-color:lightblue" class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CLOTHES_PROJECT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><u>Home</u></a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-action="Index" asp-controller="Employee" class="nav-link text-dark"><u>Employees</u></a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-action="Index" asp-controller="Dependent" class="nav-link text-dark"><u>Dependents</u></a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-action="Index" asp-controller="Department" class="nav-link text-dark"><u>Departments</u></a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-action="Index" asp-controller="Project" class="nav-link text-dark"><u>Projects</u></a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-action="Index" asp-controller="Works_on" class="nav-link text-dark"><u>Assign Employee To Project</u></a>
                        </li>
@*                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CLOTHES_PROJECT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
